<script>
$.get("/tubiao",function (data) {
    console.log(data)
    $('.div ul').html(' ')
    $.each(data.s, function (i, n) {
        var zhi = ''
        if (n.zhaungtai == 0) {
            zhi = '0'
        }
        if (n.zhaungtai == 1) {
            zhi = '1'
        }
        if (n.zhaungtai == 2) {
            zhi = '2'
        }
        $('<li class="btn btn-default" data-dismiss="modal" "></li>').html('<div class="ruzhu' + zhi + '">' + n.fangjianhao + '</div><span>' + n.fangjianleixing+'-'+n.weizhi + '</span>').appendTo($('.div ul'))
    })
})

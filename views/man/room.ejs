<script src="../js/PageNav.js"></script>
<script>
    // 返回
    $('.fan').click(function () {
        window.location="/mangae/index"
    })
    $.get("/roomLei", function (data) {
        $('<option value="请选择">请选择</option>').appendTo($("#select0"))
        $.each(data.result, function (i, n) {
            $('<option value=' + n.mingcheng + '>' + n.mingcheng + '</option>').appendTo($("#select0"))
        })
    })
    $("#select0").change(function () {
        var val=$(this).val();
        $.get("/roomshu/" + val, function (data) {
            var nom=data.s[0].shuliang
            $.get("/lengthRoom/"+val,function (data) {
                console.log(data.s.length)
                if (data.s.length>=nom){
                    alert("此类房间的数量已上限，不能添加")
                }
            })
        })
    })
    // <!--增加-->
    $("#Addbtn").click(function () {
        var str =$("#zengjia").serialize();
        $.post("/addroom",str,function (data) {
            if (data.s == 1) {
                alert('成功')
                window.location='/mangae/room'
                $('input[type=text]').val(' ')
            }
            if (data.s == -1) {
                alert("服务器错误")
            }
            if (data.s == -2) {
                alert("用户名已存在")
                $('input[type=text]').val(' ')
            }
        })
    })
    // //获取数据
    $.get("/readroom?page=\"+pagenum",function (data) {
        new PageNav({
            boxid:"limBox",
            page:1,
            pageAmount:data.pageAmount,
            change:function (pagenum) {
                gopage(pagenum)
            }
        })
        gopage(1)

    })
    function gopage(pagenum) {
        $('#tbody').html(' ');
        $.get("/readroom?page="+pagenum,function (data) {
            var num=''
            $.each(data.result,function (i,n) {
                if (n.zhaungtai==0){
                    num="未入住"
                }
                if(n.zhaungtai==1){
                    num="已入住"
                }
                if(n.zhaungtai==2){
                    num="维修中"
                }
                $tr = $("<tr></tr>");
                $("<td></td>").html('<input type="radio" data-id="' + n._id + '" name="radio" class="ipt">').appendTo($tr);
                $("<td></td>").html(n.fangjianhao).appendTo($tr);
                $("<td></td>").html(n.fangjianleixing).appendTo($tr);
                $("<td></td>").html(n.weizhi).appendTo($tr);
                $("<td></td>").html(n.miaoshu).appendTo($tr);
                $("<td></td>").html(num).appendTo($tr);
                $tr.appendTo($("#tbody"));
            })
        })
    }
    // // 按钮禁用
    $(".abtn").attr("disabled", "disabled");
    $('#tbody').delegate(".ipt", "click", function () {
        if ($(this).is(":checked")) {
            $(".abtn").removeAttr("disabled");
        } else {
            $(".abtn").attr("disabled", "disabled");
        }
    });
    // // 删除
    $("#delbtn").click(function () {
        var id = $("input[name=radio]:checked").attr("data-id");
        $.ajax({
            url: "/delRoom/" + id,
            type: "get",
            success: function (data) {
                if (data.s == 1) {
                    alert("删除成功");
                    window.location="/mangae/room"
                } else {
                    alert("服务器错误！");
                }
            }
        });
    })
    // // 修改
    $(".edit").click(function () {
        var id = $("input[name=radio]:checked").attr("data-id");
        $.ajax({
            "url":"/updateroom/"+id,
            "type":"get",
            success:function (data) {
                console.log(data)
                if (data.s==-1){
                    alert("服务器错误")
                }else {
                    $("#xiugai input[name=fangjianhao]").val(data.s.fangjianhao);
                    $("#xiugai input[name=weizhi]").val(data.s.weizhi);
                    $("#xiugai input[name=fangjianleixing]").val(data.s.fangjianleixing);
                    $("#xiugai textarea[name=miaoshu]").val(data.s.miaoshu);
                }
            }
        })
    })
    // // 修改  提交
    $(".update").click(function () {
        var str =$("#xiugai").serialize();
        $.post("/uproom",str,function (data) {
            if (data.s==1){
                alert("修改成功");
                window.location='/mangae/room'
            }
            if (data.s==-1){
                alert("服务器错误")
            }
        })
    })
</script>
